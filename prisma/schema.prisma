// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  username String @unique
  password String
  createdAt DateTime @default(now())
  cash Decimal
  transactions Transaction[]
  wathchList WatchListItem[]
  values ProfolioValue[]
  profolio ProfolioItem[]
}

model WatchListItem{
  user User @relation(fields:[userId], references:[id])
  userId String
  symbol String
  @@unique([userId, symbol])
}

model Transaction{
  createdAt DateTime @default(now())
  user User @relation(fields:[userId], references:[id])
  userId String
  symbol String
  quantity Int
  cost Decimal
  @@unique([createdAt, userId])
}

model ProfolioItem{
  user User @relation(fields:[userId], references:[id])
  userId String
  symbol String
  updatedAt DateTime @updatedAt
  quantity Int
  cost Decimal
  @@unique([userId, symbol])
}

model ProfolioValue{
  user User @relation(fields:[userId], references:[id])
  userId String
  balance Decimal
  createdAt DateTime @default(now())
  @@unique([userId, createdAt])
}